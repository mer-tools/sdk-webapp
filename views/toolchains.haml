.content
  .page_header
    = _ :manage_toolchains
  #tables_wrap
    #toolchains_table
      %table
        %tbody
          - @toolchain_list.each do |toolchain, installed|
            %tr
              %td.element_name
                #{toolchain}
              -# removing patterns wont' work so let's hide the button
                %td.delete_button 
                - if installed
                  %form{:action => "/toolchains/#{toolchain}", :method => "post"}
                    %input{:type => "submit", :value => (_ :delete), :class => "button", :name=> "_method"}
                - else
                  %input{:type => "button", :value => (_ :delete), :disabled => "true", :class => "button disabled", :name=> "_method"}
              %td.install_button
                - if not installed
                  %form{:action => "/#{@language}/toolchains/#{toolchain}", :method => "post"}
                    %input{:type => "submit", :value => (_ :install), :class => "button"}
              %td
                - if installed
                  = _( :installed)
  .clear
